{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "outDir": "out",
        "lib": [
            "ES2022"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
