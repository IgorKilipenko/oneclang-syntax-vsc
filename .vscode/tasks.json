// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "package-pre-release",
            "hide": true,
            "type": "shell",
            "command": "vsce",
            "args": [
                "package",
                "--pre-release"
            ],
            "presentation": {
                "reveal": "silent",
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "publish-pre-release",
            "type": "shell",
            "command": "vsce",
            "args": [
                "publish",
                "--pre-release",
                "--skip-duplicate"
            ],
            "presentation": {
                "reveal": "always",
            },
            "dependsOn": [
                "package-pre-release"
            ],
        },
    ]
}
