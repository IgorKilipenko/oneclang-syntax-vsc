{
    "folding": {
        "markers": {
            "start": "^\\s*#Область\\b",
            "end": "^\\s*#КонецОбласти\\b"
        }
    },
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        {
            "open": "Тогда",
            "close": "КонецЕсли;",
            "notIn": ["string", "comment"]
        },
        {
            "open": "Функция",
            "close": "КонецФункции",
            "notIn": ["string", "comment"]
        },
        {
            "open": "Процедура",
            "close": "КонецПроцедуры",
            "notIn": ["string", "comment"]
        },
        { "open": "\"", "close": "\"", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["<", ">"]
    ],
    "colorizedBracketPairs": [
        ["(", ")"],
        ["[", "]"],
        ["{", "}"],
        ["<", ">"]
    ],
    "wordPattern": {
        "pattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\@\\~\\!\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>/\\?\\s]+)"
    },
    "indentationRules": {
        "decreaseIndentPattern": {
            "pattern": "^((?!.*?/\\*).*\\*/)?\\s*[\\}\\]].*$|^\\s*Иначе\\s*$"
        },
        "increaseIndentPattern": {
            "pattern": "^((?!//).)*(\\{([^}\"'`/]*|(\\t|[ ])*//.*)|\\([^)\"'`/]*|\\[[^\\]\"'`/]*)$"
        },
        "unIndentedLinePattern": {
            "pattern": "^(\\t|[ ])*[ ]\\*[^/]*\\*/\\s*$|^(\\t|[ ])*[ ]\\*/\\s*$|^(\\t|[ ])*[ ]\\*([ ]([^\\*]|\\*(?!/))*)?$"
        }
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*Если\\s+.+Тогда\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*Иначе\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*(Процедура)|(Функция)\\s*$",
            "afterText": "^\\s*Конец(Процедуры)|(Функции)\\s*$",
            "action": { "indent": "indentOutdent" }
        },
        {
            "beforeText": "^\\s*(?:Процедура)|(?:Функция)\\s+[А-Яа-яЁёA-Za-z_0-9]+\\s*\\(.*\\)\\s*$",
            "action": { "indent": "indent" }
        }
    ]
}
