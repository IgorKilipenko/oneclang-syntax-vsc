{
    "folding": {
        "markers": {
            "start": "^\\s*#Область\\b",
            "end": "^\\s*#КонецОбласти\\b"
        }
    },
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        { "open": "\"", "close": "\"", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "colorizedBracketPairs": [
        ["(", ")"],
        ["[", "]"],
        ["{", "}"]
    ],
    "indentationRules": {
        "decreaseIndentPattern": {
            "pattern": "^\\s*(из|from|где|where)\\s*",
            "flags": "i"
        },
        "increaseIndentPattern": {
            "pattern": "(\\s+|^)(?:выбрать|select|из|from|где|where)\\s*",
            "flags": "i"
        }
    }
}
