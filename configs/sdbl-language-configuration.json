{
    "folding": {
        "markers": {
            "start": "^\\s*#Область\\b",
            "end": "^\\s*#КонецОбласти\\b"
        }
    },
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        { "open": "\"", "close": "\"", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
    ],
    "colorizedBracketPairs": [
        ["(", ")"],
        ["[", "]"],
        ["{", "}"],
    ]
}
