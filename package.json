{
  "name": "oneclang-syntax-vsc",
  "displayName": "%displayName%",
  "description": "%description%",
  "publisher": "IgorKilipenko",
  "icon": "images/onecalng_favicon.png",
  "version": "0.3.26",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension",
  "activationEvents": [
    "onLanguage:bsl",
    "onLanguage:sdbl"
  ],
  "contributes": {
    "languages": [
      {
        "id": "bsl",
        "extensions": [
          ".bsl"
        ],
        "aliases": [
          "1Clang",
          "BSL"
        ],
        "configuration": "./configs/bsl-language-configuration.json"
      },
      {
        "id": "sdbl",
        "extensions": [
          ".sdbl"
        ],
        "aliases": [
          "1Clang.Query",
          "SDBL"
        ],
        "configuration": "./configs/sdbl-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bsl",
        "scopeName": "source.bsl",
        "path": "./syntaxes/bsl.tmLanguage.json"
      },
      {
        "language": "sdbl",
        "scopeName": "source.sdbl",
        "path": "./syntaxes/sdbl.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "bsl",
        "scopes": {
          "property": [
            "variable.other.property.bsl"
          ],
          "property.readonly": [
            "variable.other.constant.property.bsl"
          ],
          "variable": [
            "variable.other.readwrite.bsl"
          ],
          "variable.readonly": [
            "variable.other.constant.object.bsl"
          ],
          "function": [
            "entity.name.function.bsl"
          ],
          "namespace": [
            "entity.name.type.module.bsl"
          ],
          "variable.defaultLibrary": [
            "support.variable.bsl"
          ],
          "function.defaultLibrary": [
            "support.function.bsl"
          ]
        }
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "[*Dark*]": {
          "textMateRules": [
            {
              "scope": [
                "variable.other.property.bsl",
                "variable.other.property.sdbl"
              ],
              "settings": {
                "foreground": "#4FC1FF"
              }
            }
          ]
        },
        "[*Light*]": {
          "textMateRules": [
            {
              "scope": [
                "variable.other.property.bsl",
                "variable.other.property.sdbl"
              ],
              "settings": {
                "foreground": "#120052"
              }
            }
          ]
        },
        "textMateRules": [
          {
            "scope": [
              "support.function.bsl",
              "support.function.sdbl"
            ],
            "settings": {
              "fontStyle": "bold"
            }
          },
          {
            "scope": [
              "keyword.operator.logical.sdbl"
            ],
            "settings": {
              "fontStyle": "bold"
            }
          },
          {
            "scope": [
              "variable.parameter.sdbl"
            ],
            "settings": {
              "fontStyle": "underline"
            }
          }
        ]
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IgorKilipenko/oneclang-syntax-vsc"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint ./src --ext .ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.8",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
